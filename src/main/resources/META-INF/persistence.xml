<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="tiendaRopa-jpa">
        <class>org.example.model.Usuario</class>
        <class>org.example.model.Etiqueta</class>
        <class>org.example.model.descuento.Descuento</class>
        <class>org.example.model.descuento.DescuentoFijo</class>
        <class>org.example.model.descuento.DescuentoPorcentaje</class>
        <class>org.example.model.pedido.Pedido</class>
        <class>org.example.model.pedido.LineaPedido</class>
        <class>org.example.model.producto.Producto</class>
        <class>org.example.model.producto.Camisa</class>
        <class>org.example.model.producto.Chaqueta</class>
        <class>org.example.model.producto.Pantalon</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tiendaRopa-jpa?createDatabaseIfNotExist=true&amp;useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
